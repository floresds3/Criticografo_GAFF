<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Criticografo_GAFF.View.Criticografo"
             Title="Criticografo">
    
    <VerticalStackLayout Padding="50, 30, 50, 0">
        <Label 
            Text="¡Criticógrafo!" HorizontalOptions="Center" VerticalOptions="Center"
            FontSize="25" FontAttributes="Bold"
            Margin="0, 20, 0, 0"/>

        <Label Text="Nombre:"
               Margin="0, 30, 0, 0"/>
        
        <Entry x:Name="Nombre" Placeholder="Ingrese el nombre de la persona a criticar"/>

        <Label Text="Genero:" 
               Margin="0, 10, 0, 0"/>


        <HorizontalStackLayout Spacing="20" Padding="0, 0, 0, 50">
            <RadioButton x:Name="btnHombre" Content="Hombre"/>
            <RadioButton x:Name="btnMujer" Content="Mujer"/>
        </HorizontalStackLayout>

        <Grid  Padding="50, 0, 20, 30"> 
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0">

                <HorizontalStackLayout>
                    <CheckBox x:Name="chkAlto"
                              VerticalOptions="Center"/>

                    <Label Text="Alto"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <CheckBox x:Name="chkListo"
                              VerticalOptions="Center"/>

                    <Label Text="Listo"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <CheckBox x:Name="chkRaro"
                              VerticalOptions="Center"/>

                    <Label Text="Raro"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1">

                <HorizontalStackLayout>
                    <CheckBox x:Name="chkFeo"
                              VerticalOptions="Center"/>

                    <Label Text="Feo"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <CheckBox x:Name="chkExtravagante"
                              VerticalOptions="Center"/>

                    <Label Text="Extravagante"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <CheckBox x:Name="chkGrande"
                              VerticalOptions="Center"/>

                    <Label Text="Grande"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

            </VerticalStackLayout>

        </Grid>

        <Button x:Name="Criticar" Text="CRITICAR"
                BackgroundColor="Gray" 
                TextColor="Black" FontAttributes="Bold"/>

    </VerticalStackLayout>
</ContentPage>